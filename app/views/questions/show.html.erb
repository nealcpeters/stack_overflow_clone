
<h1><%= @question.title %></h1>
<p><%= @question.body %></p>
<p>By: <%= @question.user.username%></p>
<% if current_user %>
  <% if current_user.id == @question.user_id %>
    <%= link_to "Delete Question", question_path(@question.id), method: "delete" %>
  <% end %>
  <% %>
  <%= link_to "Add Comment", new_comment_path(question_id: @question.id) %>
<% end %>

<% if !@question.answers.empty? %>
  <h3>Answers</h3>
  <% @question.answers.each do |answer| %>
    <div><%= answer.body %></div>
    <div>Username: <%= answer.user.username %></div>
    <% if current_user %>
      <%= link_to "Add Comment", new_comment_path(answer_id: answer.id) %>
    <% end %><br><br>
  <% end %>
<% end %>

<% if current_user %>
  <h2>Answer Question</h2>

  <%= form_for [@question, @answer] do |f| %>
    <%= f.label :body %> <br>
    <%= f.text_area :body, rows: 10, cols: 100 %> <br>
    <%= f.submit %>
  <% end %>
<% end %>
